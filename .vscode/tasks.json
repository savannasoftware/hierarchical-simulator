{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "pytest: Run all tests",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "pytest",
                "tests/",
                "-v"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "env": {
                    "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/hierarchical_simulator"
                }
            }
        },
        {
            "label": "pytest: Run with coverage",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "pytest",
                "tests/",
                "--cov=hierarchical_simulator",
                "--cov-report=html",
                "-v"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "env": {
                    "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/hierarchical_simulator"
                }
            }
        },
        {
            "label": "poetry: Install dependencies",
            "type": "shell",
            "command": "poetry",
            "args": [
                "install",
                "--with",
                "test,dev,docs"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "poetry: Run tests",
            "type": "shell",
            "command": "poetry",
            "args": [
                "run",
                "pytest",
                "tests/",
                "-v"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "black: Format code",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "black",
                "hierarchical_simulator",
                "tests"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Test convenience functions",
            "type": "shell",
            "command": "python",
            "args": [
                "tests/test_convenience_functions.py"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "env": {
                    "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/hierarchical_simulator"
                }
            }
        }
    ]
}